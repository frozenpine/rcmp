{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rcmp",
  "version": "0.1.2",
  "identifier": "com.rdrk.rcmp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "rcmp",
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "dialog",
          "windows": ["*"],
          "permissions": [
            "dialog:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "config/config.toml",
      "sql/fund/*.sql",
      "sql/meta/*.sql"
    ]
  },
  "plugins": {
  }
}
